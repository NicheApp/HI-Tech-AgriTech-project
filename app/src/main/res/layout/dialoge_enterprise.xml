<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/landholding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Enterprise / Business details"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/enterprice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="

Micro Enterprice Name

"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="80dp"/>

        <EditText
            android:id="@+id/entrpenuername"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:hint="

Name of the Enterpreneur

"
            android:layout_marginRight="20dp" />



        <EditText
            android:id="@+id/personenvolved"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="220dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="
No. of person employed
"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/annexpenditure"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="290dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="

Annual Expediture
"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/annincomeenterprise"
            android:layout_width="match_parent"
            android:hint="

Annual Income(₹)
"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="360dp"
            android:layout_marginRight="20dp"
            />

        <EditText
            android:id="@+id/netincomeenterprise"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="430dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="

Net Income(₹)
"
            android:inputType="textPersonName" />
        <Spinner
            android:id="@+id/registrationenterprise"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="500dp"
            android:layout_marginRight="20dp"

            android:inputType="textPersonName" />
        <Spinner
            android:id="@+id/partofgroup"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="570dp"
            android:layout_marginRight="20dp"

            android:inputType="textPersonName" />

        <Button
            android:id="@+id/submitlocation"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:textSize="12sp"
            android:text="Submit Query"
            android:textColor="@android:color/white"
            android:background="@color/purplecolor"
            android:elevation="4dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="640dp"/>

    </RelativeLayout>

</ScrollView>