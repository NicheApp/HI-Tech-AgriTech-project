            android:textColor="@android:color/white"
            android:text="Crop Intervention Details" />

        <Button
            android:id="@+id/alliedintervention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightmaincolor"
            android:textColor="@android:color/white"
            android:text="Agri Allied - Others" />

        <Button
            android:id="@+id/livestockintervention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightmaincolor"
            android:textColor="@android:color/white"
            android:text="Agri Allied - Livestock" />

        <Button
            android:id="@+id/dailywage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightmaincolor"
            android:textColor="@android:color/white"
            android:text="Daily Wage(â‚¹)/Labour Details" />

        <Button
            android:id="@+id/skillmappingintervention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightmaincolor"
            android:textColor="@android:color/white"
            android:text="Skill Mapping" />

        <Button
            android:id="@+id/Ententerpriseintervention"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="350dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/lightmaincolor"
            android:textColor="@android:color/white"
            android:text="Enterprise / Business details" />


</RelativeLayout>
    </ScrollView>

    <TextView
        android:id="@+id/Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="Name: " />

    <TextView
        android:id="@+id/id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        android:text="ID: " />
    <TextView
        android:id="@+id/baselineincome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:text="TOTAL BASELINE INCOME:  0 " />

    <TextView
        android:id="@+id/currentyear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
