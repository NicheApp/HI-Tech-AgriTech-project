<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/serial"
        android:layout_width="56dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/table_content_cell_bg"
        android:text="S.No"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/respondent"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:background="@drawable/table_content_cell_bg"
        android:text="Respondant's Name "
        android:textSize="18sp" />

    <TextView
        android:id="@+id/caste"
        android:layout_width="124dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:background="@drawable/table_content_cell_bg"
        android:text="Caste"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/village"
        android:layout_width="156dp"
        android:layout_height="match_parent"

        android:background="@drawable/table_content_cell_bg"
        android:text="Village"
        android:textAlignment="center"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/interventions"
        android:layout_width="156dp"
        android:layout_height="match_parent"

        android:background="@drawable/table_content_cell_bg"
        android:text="Interventions"

        android:textSize="18sp" />
    <TextView
        android:id="@+id/baselineincome"
        android:layout_width="156dp"
        android:layout_height="match_parent"

        android:background="@drawable/table_content_cell_bg"
        android:text="Baseline Income"

        android:textSize="18sp" />
    <TextView
        android:id="@+id/currentyear"
        android:layout_width="156dp"
        android:layout_height="match_parent"

        android:background="@drawable/table_content_cell_bg"
        android:text="Current Year /n Income"
        android:textAlignment="center"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/Progress"
        android:layout_width="156dp"
        android:layout_height="match_parent"

        android:background="@drawable/table_content_cell_bg"
        android:text="Percentage\nprogress"

        android:textSize="18sp" />


</LinearLayout>