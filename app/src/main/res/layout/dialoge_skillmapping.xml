<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/landholding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Skill Mapping"
            android:textColor="@android:color/black"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/nameperson"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="

Name of the person

"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="80dp"/>




        <EditText
            android:id="@+id/typeofvocational"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Type of Vocational/ professional Skill
"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/durationoftraining"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="220dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="Duration of Training/ Course persued"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/institution"
            android:layout_width="match_parent"
            android:hint="Name of Institution"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="290dp"
            android:layout_marginRight="20dp"
            />

        <EditText
            android:id="@+id/annincomeskillmapping"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="360dp"
            android:layout_marginRight="20dp"
            android:ems="10"
            android:hint="

Annual Income(â‚¹)
"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/submitlocation"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:textSize="12sp"
            android:text="Submit Query"
            android:textColor="@android:color/white"
            android:background="@color/purplecolor"
            android:elevation="4dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="430dp"/>

    </RelativeLayout>

</ScrollView>